<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="2dp" android:color="?attr/game_board_line_color" />
            <solid android:color="?theme_color" />

        </shape>
    </item>

    <item android:top="2dp" android:start="1dp" android:bottom="1dp" android:end="2dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="2dp" android:color="?theme_color" />
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>