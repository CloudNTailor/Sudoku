<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="?attr/game_board_line_color" />
            <solid android:color="?attr/selection_box_color" />

        </shape>
    </item>

    <item android:top="1dp" android:start="1dp" android:bottom="1dp" android:end="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="?attr/selection_box_color" />
            <solid android:color="?attr/selection_box_color" />
        </shape>
    </item>

</layer-list>