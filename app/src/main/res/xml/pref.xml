<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:entries="@array/language_names"
        android:entryValues="@array/language_codes"
        android:key="@string/pref_key_language"
        android:summary="@string/pref_summary_language"
        android:title="@string/pref_title_language" />

    <ListPreference
        android:entries="@array/level_names"
        android:entryValues="@array/level_codes"
        android:key="@string/pref_key_difficulty"
        android:summary="@string/pref_summary_difficulty"
        android:title="@string/pref_title_difficulty"
        android:defaultValue="41"/>

</PreferenceScreen>